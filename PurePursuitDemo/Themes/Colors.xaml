<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- iOS-ish palette -->
    <Color x:Key="C_Bg">#FFF5F6FA</Color>
    <Color x:Key="C_Card">#FFFFFFFF</Color>
    <Color x:Key="C_Text">#FF111827</Color>
    <Color x:Key="C_SubText">#FF6B7280</Color>
    <Color x:Key="C_Line">#FFE5E7EB</Color>

    <Color x:Key="C_Primary">#FF2563EB</Color>
    <Color x:Key="C_RedPath">#FFEF4444</Color>
    <Color x:Key="C_Green">#FF10B981</Color>
    <Color x:Key="C_Orange">#FFF59E0B</Color>

    <SolidColorBrush x:Key="BgBrush" Color="{StaticResource C_Bg}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource C_Card}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource C_Text}"/>
    <SolidColorBrush x:Key="SubTextBrush" Color="{StaticResource C_SubText}"/>
    <SolidColorBrush x:Key="LineBrush" Color="{StaticResource C_Line}"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource C_Primary}"/>
    <SolidColorBrush x:Key="PathBrush" Color="{StaticResource C_RedPath}"/>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource C_Green}"/>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource C_Orange}"/>
</ResourceDictionary>
